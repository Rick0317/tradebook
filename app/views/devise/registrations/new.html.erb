<h2>Sign up</h2>

<%= form_with model: @user, url: new_user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.text_area :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.text_area :profile, autofocus: true %>
  </div>

  <div class="field">
    <div>
      Your Grade
    </div>
    <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
  </div>
  <div class="field">
    <div>
      Your major
    </div>
    <%= f.collection_select(:major_id, Major.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
